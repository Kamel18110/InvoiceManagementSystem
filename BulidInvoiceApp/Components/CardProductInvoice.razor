@using BulidInvoiceApp.Models

<div class="product-card-invoice">
    <div class="product-image">
        <img src="@ProductImageUrl" alt="@ProductName" />
    </div>
    <div class="product-info">
        <h4 class="product-name">@ProductName</h4>
        <p class="product-price">@ProductPrice.ToString("C")</p>
        <div class="quantity-section">
            <label>Quantity:</label>
            <input type="number"
                   class="quantity-input"
                   min="1"
                   value="@Quantity"
                   @onchange="OnQuantityChanged" />
        </div>
        <button class="add-btn" @onclick="OnAddClick">
            <i class="fas fa-plus-circle"></i> AddInvoice
        </button>
    </div>
</div>

@code {
    [Parameter] public string ProductName { get; set; }
    [Parameter] public decimal ProductPrice { get; set; }
    [Parameter] public string ProductImageUrl { get; set; }
    [Parameter] public Guid ProductId { get; set; }
    [Parameter] public EventCallback<(Guid productId, int quantity)> OnAddToInvoice { get; set; }

    private int Quantity { get; set; } = 1;

    private void OnQuantityChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int qty) && qty > 0)
        {
            Quantity = qty;
        }
        else
        {
            Quantity = 1;
        }
    }

    private async Task OnAddClick()
    {
        await OnAddToInvoice.InvokeAsync((ProductId, Quantity));
        Quantity = 1; 
    }
}

