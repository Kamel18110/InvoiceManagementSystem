<div class="product-card">
    <div class="product-image-container">
        <img class="product-image" src="@ProductImageUrl" alt="@ProductName" />
      
    </div>

    <div class="product-info">
        <h3 class="product-name">@ProductName</h3>
        <div class="product-price">@ProductPrice.ToString("C")</div>
    </div>

    <div class="product-actions">
       
        <button @onclick="OnViewMore" class="action-btn view-btn" title="عرض التفاصيل">
            <i class="fas fa-eye"></i>
        </button>
        <button @onclick="OnEdit" class="action-btn edit-btn" title="تعديل">
            <i class="fas fa-edit"></i>
        </button>
        <button @onclick="OnDelete" class="action-btn delete-btn" title="حذف">
            <i class="fas fa-trash"></i>
        </button>
    </div>
</div>

@code {
    [Parameter]
    public string ProductImageUrl { get; set; }

    [Parameter]
    public string ProductName { get; set; }

    [Parameter]
    public decimal ProductPrice { get; set; }

   

    [Parameter]
    public EventCallback OnDelete { get; set; }

    [Parameter]
    public EventCallback OnEdit { get; set; }

    [Parameter]
    public EventCallback OnViewMore { get; set; }

   
}

