@page "/invoices"
@using BulidInvoiceApp.Services.Invoices
@using BulidInvoiceApp.Models
@inject IInvoiceService InvoiceService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="invoices-container">
    <div class="header-section">
        <h2 class="page-title">Billing Management</h2>
        <button class="create-invoice-btn" @onclick="NavigateToCreate">
            <i class="fas fa-plus"></i> Create a new invoice
        </button>
    </div>

    @if (invoices == null)
    {
        <div class="loading">Loading invoices...</div>
    }
    else if (!invoices.Any())
    {
        <div class="no-data">
            <i class="fas fa-file-invoice"></i>
            <p>There are no invoices at the moment.</p>
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="invoices-table">
                <thead>
                    <tr>
                        <th>Invoice number</th>
                        <th>date</th>
                        <th>name Customer</th>
                        <th>Phone Nomber</th>
                        <th>Tax %</th>
                        <th>Discount %</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in invoices)
                    {
                        <tr>
                            <td>@invoice.Id.ToString().Substring(0, 8)...</td>
                            <td>@invoice.Date.ToString("yyyy-MM-dd")</td>
                            <td>@invoice.NameCustomer</td>
                            <td>@invoice.PhoneNumber</td>
                            <td>@invoice.Tax%</td>
                            <td>@invoice.Discount%</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-view" @onclick="() => ViewInvoice(invoice.Id)" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn-delete" @onclick="() => DeleteInvoice(invoice.Id)" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<ViewInvoiceModal IsVisible="@showViewModal"
                  InvoiceId="@selectedInvoiceId"
                  OnModalClosed="@OnViewModalClosed" />

@code {
    private IEnumerable<Invoice> invoices;
    private bool showViewModal = false;
    private Guid selectedInvoiceId = Guid.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadInvoices();
    }

    private async Task LoadInvoices()
    {
        try
        {
            invoices = await InvoiceService.GetAll();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading invoices: {ex.Message}");
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/createinvoice");
    }

    private void ViewInvoice(Guid invoiceId)
    {
        selectedInvoiceId = invoiceId;
        showViewModal = true;
    }

    private async Task DeleteInvoice(Guid id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this invoice?"))
        {
            try
            {
                bool deleted = await InvoiceService.Delete(id);
                if (deleted)
                {
                    await LoadInvoices();
                    Console.WriteLine("The invoice has been successfully deleted.");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting invoice: {ex.Message}");
            }
        }
    }

    private void OnViewModalClosed()
    {
        showViewModal = false;
        selectedInvoiceId = Guid.Empty;
    }
}

