@page "/information"
@using BulidInvoiceApp.Models
@using BulidInvoiceApp.Services.Admin
@inject IadminSrevices AdminService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="company-info-container">
    <div class="header-section">
        <h2 class="page-title">Company Information</h2>
        <p class="page-subtitle">Manage company details and logo for invoice printing</p>
    </div>

    <div class="form-container">
        <EditForm Model="@companyInfo" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-grid">
                <!-- Basic Information -->
                <div class="form-section">
                    <h3 class="section-title">Basic Information</h3>

                    <div class="input-field">
                        <input class="input" id="name" @bind="companyInfo.Name" required />
                        <label class="label">Company Name *</label>
                        <ValidationMessage For="@(() => companyInfo.Name)" />
                    </div>

                    <div class="input-field">
                        <input class="input" id="address" @bind="companyInfo.Address" />
                        <label class="label">Address</label>
                    </div>

                    <div class="input-field">
                        <input class="input" id="phone" @bind="companyInfo.Phone" />
                        <label class="label">Phone Number</label>
                    </div>

                    <div class="input-field">
                        <input class="input" type="email" id="email" @bind="companyInfo.Email" />
                        <label class="label">Email Address</label>
                    </div>
                </div>

                <!-- Logo Upload -->
                <div class="form-section">
                    <h3 class="section-title">Company Logo</h3>

                    <div class="logo-upload-section">
                        @if (!string.IsNullOrEmpty(logoPreview))
                        {
                            <div class="logo-preview">
                                <img src="@logoPreview" alt="Company Logo" class="logo-image" />
                                <button type="button" class="btn-remove-logo" @onclick="RemoveLogo">
                                    &times;
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="logo-placeholder">
                                <i class="fas fa-building"></i>
                                <span>No Logo</span>
                            </div>
                        }

                        <div class="upload-controls">
                            <label class="file-label">
                                <span class="btn-upload">
                                    <i class="fas fa-upload"></i> Upload Logo
                                </span>
                                <InputFile id="logo" OnChange="@HandleLogoUpload" class="file-input" accept="image/*" />
                            </label>
                            <span class="file-hint">(PNG, JPG, Max 2MB)</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-btn" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <i class="fas fa-spinner fa-spin"></i>
                    }
                    Save Information
                </button>
                <button type="button" class="cancel-btn" @onclick="ResetForm">
                    Reset
                </button>
            </div>
        </EditForm>
    </div>

    <!-- Invoice Preview -->
    @if (!string.IsNullOrEmpty(companyInfo.Name))
    {
        <div class="preview-section">
            <h3 class="section-title">Invoice Preview</h3>
            <div class="invoice-preview">
                <div class="invoice-header">
                    @if (!string.IsNullOrEmpty(logoPreview))
                    {
                        <img src="@logoPreview" alt="Company Logo" class="preview-logo" />
                    }
                    <div class="company-details">
                        <h2>@companyInfo.Name</h2>
                        @if (!string.IsNullOrEmpty(companyInfo.Address))
                        {
                            <p><i class="fas fa-map-marker-alt"></i> @companyInfo.Address</p>
                        }
                        @if (!string.IsNullOrEmpty(companyInfo.Phone))
                        {
                            <p><i class="fas fa-phone"></i> @companyInfo.Phone</p>
                        }
                        @if (!string.IsNullOrEmpty(companyInfo.Email))
                        {
                            <p><i class="fas fa-envelope"></i> @companyInfo.Email</p>
                        }
                    </div>
                </div>
                <div class="invoice-body">
                    <p>This is a preview of how your company information will appear on printed invoices.</p>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private CompanyInfo companyInfo = new();
    private string logoPreview = string.Empty;
    private byte[]? logoBytes;
    private bool isLoading = false;
    private bool isEditMode = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanyInfo();
    }

    private async Task LoadCompanyInfo()
    {
        try
        {
            var existingInfo = await AdminService.GetCompanyInfoAsync();
            if (existingInfo != null)
            {
                companyInfo = existingInfo;
                isEditMode = true;

                // Load logo for preview
                if (companyInfo.Logo != null && companyInfo.Logo.Length > 0)
                {
                    logoPreview = $"data:image/png;base64,{Convert.ToBase64String(companyInfo.Logo)}";
                }
            }
            else
            {
                companyInfo = new CompanyInfo { Id = Guid.NewGuid() };
                isEditMode = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading company info: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading data: {ex.Message}");
        }
    }

    private async Task HandleLogoUpload(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.File;
            if (file != null)
            {
                // Check file size (max 2MB)
                if (file.Size > 2 * 1024 * 1024)
                {
                    await JSRuntime.InvokeVoidAsync("alert", "File size is too large! Maximum 2MB");
                    return;
                }

                var format = "image/png";
                var resizedImage = await file.RequestImageFileAsync(format, 300, 300);

                using var stream = resizedImage.OpenReadStream(maxAllowedSize: 2 * 1024 * 1024);
                using var memoryStream = new MemoryStream();
                await stream.CopyToAsync(memoryStream);

                logoBytes = memoryStream.ToArray();
                logoPreview = $"data:{format};base64,{Convert.ToBase64String(logoBytes)}";
                companyInfo.Logo = logoBytes;

                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error uploading logo: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error uploading logo: {ex.Message}");
        }
    }

    private void RemoveLogo()
    {
        companyInfo.Logo = null;
        logoPreview = string.Empty;
        logoBytes = null;
        StateHasChanged();
    }

    private async Task HandleValidSubmit()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            bool success;
            if (isEditMode)
            {

                await AdminService.UpdateCompanyInfoAsync(companyInfo);
                success = true;
            }
            else
            {

                await AdminService.SaveCompanyInfoAsync(companyInfo);
                success = true;
                if (success)
                {
                    isEditMode = true;
                }
            }

            if (success)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Company information saved successfully!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Error saving company information!");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving company info: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ResetForm()
    {
        await LoadCompanyInfo();
    }
}

