@using BulidInvoiceApp.Services.Invoices
@using BulidInvoiceApp.Services.Pdf
@using BulidInvoiceApp.Services.Products
@using BulidInvoiceApp.Services.Admin
@using BulidInvoiceApp.Services.PDF
@using BulidInvoiceApp.Models
@using Microsoft.JSInterop
@inject IInvoiceService InvoiceService
@inject IProductServices ProductService
@inject IadminSrevices AdminService
@inject IPdfInvoiceService PdfService
@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3><i class="fas fa-file-invoice"></i>Invoice details</h3>
                <button class="close-btn" @onclick="CloseModal" title="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            @if (invoice == null)
            {
                <div class="modal-body">
                    <div class="loading">Loading...</div>
                </div>
            }
            else
            {
                <div class="modal-body">
                    <div class="invoice-header-info">
                        <div class="info-row">
                            <span class="label">Invoice number :</span>
                            <span class="value">@invoice.Id.ToString().Substring(0, 8)</span>
                        </div>
                        <div class="info-row">
                            <span class="label">date :</span>
                            <span class="value">@invoice.Date.ToString("yyyy-MM-dd")</span>
                        </div>
                    </div>

                    <div class="customer-info">
                        <h4><i class="fas fa-user"></i> Customer data</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <span class="label">name :</span>
                                <span class="value">@invoice.NameCustomer</span>
                            </div>
                            <div class="info-item">
                                <span class="label">phone nomber:</span>
                                <span class="value">@invoice.PhoneNumber</span>
                            </div>
                            @if (!string.IsNullOrEmpty(invoice.AddressCustomer))
                            {
                                <div class="info-item">
                                    <span class="label">address :</span>
                                    <span class="value">@invoice.AddressCustomer</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="invoice-items">
                        <h4><i class="fas fa-shopping-cart"></i> Products</h4>
                        @if (invoiceProducts == null || !invoiceProducts.Any())
                        {
                            <p class="no-items">There are no products in this invoice.</p>
                        }
                        else
                        {
                            <table class="items-table">
                                <thead>
                                    <tr>
                                        <th>product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Sum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in invoiceProducts)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>@item.Quantity</td>
                                            <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>

                    <div class="invoice-summary">
                        <div class="summary-row">
                            <span class="label">Subtotal:</span>
                            <span class="value">@GetSubtotal().ToString("C")</span>
                        </div>
                        <div class="summary-row">
                            <span class="label">tax (@invoice.Tax%):</span>
                            <span class="value">@GetTaxAmount().ToString("C")</span>
                        </div>
                        <div class="summary-row">
                            <span class="label">Discount (@invoice.Discount%):</span>
                            <span class="value">-@GetDiscountAmount().ToString("C")</span>
                        </div>
                        <div class="summary-row total">
                            <span class="label">Final total :</span>
                            <span class="value">@GetTotal().ToString("C")</span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn-print" @onclick="PrintInvoice" disabled="@isPrinting">
                        @if (isPrinting)
                        {
                            <i class="fas fa-spinner fa-spin"></i>
                            <span>Generating...</span>
                        }
                        else
                        {
                            <i class="fas fa-print"></i>
                            <span>Print PDF</span>
                        }
                    </button>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public Guid InvoiceId { get; set; }
    [Parameter] public EventCallback OnModalClosed { get; set; }

    private Invoice invoice;
    private List<InvoiceProductInfo> invoiceProducts = new List<InvoiceProductInfo>();
    private CompanyInfo companyInfo;
    private bool isPrinting = false;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && InvoiceId != Guid.Empty)
        {
            await LoadInvoice();
            await LoadCompanyInfo();
        }
    }

    private async Task LoadInvoice()
    {
        try
        {
            invoice = await InvoiceService.GetById(InvoiceId);
            await LoadInvoiceProducts();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading invoice: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading invoice: {ex.Message}");
        }
    }

    private async Task LoadCompanyInfo()
    {
        try
        {
            companyInfo = await AdminService.GetCompanyInfoAsync();
            if (companyInfo == null)
            {
                companyInfo = new CompanyInfo
                    {
                        Name = "Your Company Name",
                        Address = "Company Address",
                        Phone = "Phone Number",
                        Email = "email@company.com"
                    };
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading company info: {ex.Message}");
        }
    }

    private async Task LoadInvoiceProducts()
    {
        invoiceProducts.Clear();
        foreach (var detail in invoice.Details)
        {
            try
            {
                var product = await ProductService.GetById(detail.ProductID);
                invoiceProducts.Add(new InvoiceProductInfo
                    {
                        ProductName = product.Name,
                        Price = (decimal)product.Price,
                        Quantity = detail.Quantity
                    });
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading product: {ex.Message}");
            }
        }
    }

    private decimal GetSubtotal()
    {
        return invoiceProducts.Sum(p => p.Price * p.Quantity);
    }

    private decimal GetTaxAmount()
    {
        return GetSubtotal() * invoice.Tax / 100;
    }

    private decimal GetDiscountAmount()
    {
        return GetSubtotal() * invoice.Discount / 100;
    }

    private decimal GetTotal()
    {
        return GetSubtotal() + GetTaxAmount() - GetDiscountAmount();
    }

    private async Task PrintInvoice()
    {
        isPrinting = true;
        StateHasChanged();

        try
        {

            var pdfBytes = await PdfService.GenerateInvoicePdf(invoice,invoiceProducts, companyInfo);


            var base64 = Convert.ToBase64String(pdfBytes);


            var fileName = $"Invoice_{invoice.Id.ToString().Substring(0, 8)}_{DateTime.Now:yyyyMMdd}.pdf";
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, base64);
            invoice.Status = 1;
            InvoiceService.Update(invoice);


            await JSRuntime.InvokeVoidAsync("alert", "Invoice PDF generated successfully!");
            
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating PDF: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error generating PDF: {ex.Message}");
        }
        finally
        {
            isPrinting = false;
            StateHasChanged();
        }
    }

    private async Task CloseModal()
    {
        await OnModalClosed.InvokeAsync();
    }

}

