@page "/products"
@using BulidInvoiceApp.Services.Products
@inject IProductServices ProductService
@inject NavigationManager Navigation
@inject ILocalStorageService localStorage
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="header-section">
    <h2 class="page-title">Products Management</h2>
    <button class="create-product-btn" @onclick="ShowCreateModal">
        <i class="fas fa-plus"></i> Create New Product
    </button>
</div>

@if (products == null)
{
    <div class="loading">Loading products...</div>
}
else if (!products.Any())
{
    <div class="no-products">No products available</div>
}
else
{
    <div class="products-grid">
        @foreach (var product in products)
        {
            <CardProdact
            ProductName="@product.Name"
            ProductPrice="@((decimal)product.Price)"
            ProductImageUrl="@GetImageUrl(product.Image)"
            OnDelete="@(() => DeleteProduct(product.Id))"
            OnEdit="@(() => ShowEditModal(product.Id))"
            OnViewMore="@(() => ShowDetailsModal(product.Id))"
            />
        }
    </div>
}


<CreateProduct
IsVisible="@showCreateModal" 
OnProductCreated="@OnProductCreated" 
OnModalClosed="@OnModalClosed" />

<EditProduct IsVisible="@showEditModal"
ProductId="@selectedProductId"
OnProductUpdated="@OnProductUpdated"
OnModalClosed="@OnEditModalClosed" />

<DetailsProduct IsVisible="@showDetailsModal"
ProductId="@selectedProductId"

OnModalClosed="@OnDetailsModalClosed" />
@code {
    private IEnumerable<Product> products;
    private bool showCreateModal = false;
    private bool showEditModal = false;
    private bool showDetailsModal = false;
    private Guid selectedProductId = Guid.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            products = await ProductService.GetAll();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading products: {ex.Message}");
        }
    }

    private string GetImageUrl(byte[] imageData)
    {
        if (imageData == null || imageData.Length == 0)
        {
            return "images/default-product.png";
        }
        return $"data:image/png;base64,{Convert.ToBase64String(imageData)}";
    }

    private void ShowCreateModal()
    {
        showCreateModal = true;
    }

    private async Task OnProductCreated()
    {
      
        await LoadProducts();
        showCreateModal = false;
    }

    private async Task OnModalClosed()
    {
        showCreateModal = false;
    }

    private void ShowEditModal(Guid productId)
    {
        selectedProductId = productId;
        showEditModal = true;
    }

    private async Task OnProductUpdated()
    {
        await LoadProducts();
        showEditModal = false;
        selectedProductId = Guid.Empty;
    }

    private async Task OnEditModalClosed()
    {
        showEditModal = false;
        selectedProductId = Guid.Empty;
    }


    private void ShowDetailsModal(Guid productId)
    {
        selectedProductId = productId;
        showDetailsModal = true;
    }
    private async Task OnDetailsModalClosed()
    {
        showDetailsModal = false;
        selectedProductId = Guid.Empty;
    }




    private async Task DeleteProduct(Guid id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this product?"))
        {

            try
            {
                await ProductService.Delete(id);
               
                    await LoadProducts();
                    Console.WriteLine("Product deleted successfully");
                
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting product: {ex.Message}");
            }
        }
    }

    private void EditProduct(Guid id)
    {
        Navigation.NavigateTo($"/edit-product/{id}");
    }

    private void ViewProductDetails(Guid id)
    {
        Navigation.NavigateTo($"/product-details/{id}");
    }
   
}

<style>
   

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding: 25px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(26, 66, 104, 0.1);
        border: 1px solid #e1e8f0;
    }

    .page-title {
        font-size: 2.2rem;
        color: #1a4268;
        margin: 0;
        font-weight: 700;
        background: linear-gradient(135deg, #1a4268, #123458);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .create-product-btn {
        background: linear-gradient(135deg, #4a90e2, #357abd);
        color: white;
        border: none;
        padding: 14px 28px;
        border-radius: 10px;
        cursor: pointer;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 15px rgba(74, 144, 226, 0.3);
        position: relative;
        overflow: hidden;
    }

        .create-product-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }

        .create-product-btn:hover {
            background: linear-gradient(135deg, #357abd, #4a90e2);
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(74, 144, 226, 0.4);
        }

            .create-product-btn:hover::before {
                left: 100%;
            }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        padding: 10px;
    }

    .loading, .no-products {
        text-align: center;
        font-size: 1.2rem;
        color: #666;
        padding: 50px;
        background: #f8f9fa;
        border-radius: 8px;
        margin: 20px;
    }

    .no-products {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border: 2px dashed #dee2e6;
    }

    /* Loading animation */
    .loading {
        position: relative;
    }

    .loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 20px;
        height: 20px;
        margin: -10px 0 0 -10px;
        border: 2px solid #4CAF50;
        border-top: 2px solid transparent;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }


   @@media (max-width: 768px) {
        .header-container {
            justify-content: center;
            margin-bottom: 15px;
        }

        .create-button {
            width: 100%;
            justify-content: center;
        }

        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
            padding: 5px;
        }
    }
</style>