@using BulidInvoiceApp.Services.Products
@inject IProductServices ProductService

@if (IsVisible)
{
    <!-- Modal Overlay -->
    <div class="modal-overlay" @onclick="CloseModal">
        <!-- Modal Content -->
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <p class="title">Product Details</p>
                <button class="close-button" @onclick="CloseModal">
                    &times;
                </button>
            </div>

            @if (Product != null)
            {
                <div class="modal-body">
                    <div class="product-details">
                        <div class="product-image">
                            <img src="@GetImageUrl(Product.Image)" alt="@Product.Name" class="detail-image" />
                        </div>

                        <div class="product-info">
                            <div class="detail-row">
                                <span class="detail-label">Name Product:</span>
                                <span class="detail-value">@Product.Name</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Description:</span>
                                <span class="detail-value">@Product.Description</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Price:</span>
                                <span class="detail-value">@Product.Price.ToString("0.00")دج</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Quantity:</span>
                                <span class="detail-value">@Product.Quantity</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">
                        Close
                    </button>
                </div>
            }
            else
            {
                <div class="modal-body">
                    <div class="loading">
                        Loading product details...
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public Guid ProductId { get; set; }
    [Parameter] public EventCallback OnModalClosed { get; set; }

    private Product? Product;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && ProductId != Guid.Empty && Product?.Id != ProductId)
        {
            await LoadProduct();
        }
        else if (!IsVisible)
        {
            Product = null;
        }
    }

    private async Task LoadProduct()
    {
        try
        {
            Product = await ProductService.GetById(ProductId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading product: {ex.Message}");
        }
    }

    private string GetImageUrl(byte[]? imageData)
    {
        if (imageData == null || imageData.Length == 0)
        {
            return "images/default-product.png";
        }
        return $"data:image/png;base64,{Convert.ToBase64String(imageData)}";
    }

    private async Task CloseModal()
    {
        await OnModalClosed.InvokeAsync();
    }
}

