@page "/"
@using BulidInvoiceApp.Services.Invoices
@using BulidInvoiceApp.Services.Products
@using BulidInvoiceApp.Models
@inject IInvoiceService InvoiceService
@inject IJSRuntime JSRuntime
@inject IProductServices ProductService
@inject NavigationManager Navigation
@inject ILocalStorageService localStorage
@rendermode InteractiveServer



<div class="dashboard-container">

    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="dashboard-title">
                <i class="fas fa-chart-line"></i>
                Dashboard
            </h1>
            <div class="user-info">
                <span class="welcome-text">Welcome, Admin</span>
                <button class="logout-btn" @onclick="HandleLogout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </div>
    </div>

   
    <div class="stats-grid">
        <div class="stat-card total-invoices">
            <div class="stat-icon">
                <i class="fas fa-file-invoice"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">@totalInvoices</h3>
                <p class="stat-label">Total Invoices</p>
            </div>
        </div>

        <div class="stat-card total-products">
            <div class="stat-icon">
                <i class="fas fa-boxes"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">@totalProducts</h3>
                <p class="stat-label">Total Products</p>
            </div>
        </div>

        <div class="stat-card revenue">
            <div class="stat-icon">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">@totalRevenue.ToString("C")</h3>
                <p class="stat-label">Total Revenue</p>
            </div>
        </div>

        <div class="stat-card low-stock">
            <div class="stat-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">@lowStockProducts</h3>
                <p class="stat-label">Low Stock Products</p>
            </div>
        </div>
    </div>

   
    <div class="quick-actions">
        <h2 class="section-title">Quick Actions</h2>
        <div class="actions-grid">
            <div class="action-card" @onclick="NavigateToInvoices">
                <div class="action-icon">
                    <i class="fas fa-file-invoice-dollar"></i>
                </div>
                <h3>Manage Invoices</h3>
                <p>View and create invoices</p>
            </div>

            <div class="action-card" @onclick="NavigateToProducts">
                <div class="action-icon">
                    <i class="fas fa-box-open"></i>
                </div>
                <h3>Manage Products</h3>
                <p>Manage inventory and products</p>
            </div>

            <div class="action-card" @onclick="NavigateToCreateInvoice">
                <div class="action-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h3>Create Invoice</h3>
                <p>Create a new invoice</p>
            </div>

            <div class="action-card" @onclick="NavigateToCreateProduct">
                <div class="action-icon">
                    <i class="fas fa-cube"></i>
                </div>
                <h3>Add Product</h3>
                <p>Add new product to inventory</p>
            </div>
        </div>
    </div>

    <div class="recent-section">
        <div class="section-header">
            <h2 class="section-title">Recent Invoices</h2>
            <button class="view-all-btn" @onclick="NavigateToInvoices">
                View All <i class="fas fa-arrow-right"></i>
            </button>
        </div>
        <div class="recent-table">
            @if (recentInvoices == null || !recentInvoices.Any())
            {
                <div class="no-data">
                    <i class="fas fa-receipt"></i>
                    <p>No recent invoices</p>
                </div>
            }
            else
            {
                <table class="invoices-table">
                    <thead>
                        <tr>
                            <th>Invoice No.</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Phone</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in recentInvoices.Take(5))
                        {
                            <tr @onclick="() => ViewInvoice(invoice.Id)">
                                <td>@invoice.Id.ToString().Substring(0, 8)</td>
                                <td>@invoice.Date.ToString("yyyy-MM-dd")</td>
                                <td>@invoice.NameCustomer</td>
                                <td>@invoice.PhoneNumber</td>
                                <td>@CalculateInvoiceTotal(invoice).ToString("C")</td>
                                <td>
                                    <span class="status-badge @GetStatusClass(invoice.Status)">
                                        @GetStatusText(invoice.Status)
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>


<ViewInvoiceModal IsVisible="@showViewModal"
InvoiceId="@selectedInvoiceId"
OnModalClosed="@OnViewModalClosed" />

@code {
    private int totalInvoices = 0;
    private int totalProducts = 0;
    private decimal totalRevenue = 0;
    private int lowStockProducts = 0;
    private IEnumerable<Invoice> recentInvoices;
    private IEnumerable<Product> allProducts;
    private bool showViewModal = false;
    private Guid selectedInvoiceId = Guid.Empty;


    protected override async Task OnInitializedAsync()
    {
        await CheckAuthentication();
        await LoadDashboardData();
    }

    private async Task CheckAuthentication()
    {

        try
        {

            var keyExists = await localStorage.ContainKeyAsync("isLoggedIn");

            if (keyExists)
            {
                var loginStatus = await localStorage.GetItemAsStringAsync("isLoggedIn");


                if (!string.IsNullOrEmpty(loginStatus) && loginStatus == "false")
                {
                    Navigation.NavigateTo("/login");
                    return;
                }

            }


            if (!keyExists)
            {
                await localStorage.SetItemAsStringAsync("isLoggedIn", "false");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in OnInitializedAsync: {ex.Message}");

            try
            {
                await localStorage.SetItemAsStringAsync("isLoggedIn", "false");
            }
            catch (Exception initEx)
            {
                Console.WriteLine($"Error initializing localStorage: {initEx.Message}");
            }
        }



    }

    private async Task LoadDashboardData()
    {
        try
        {
            var invoicesTask = InvoiceService.GetAll();
            var productsTask = ProductService.GetAll();

            await Task.WhenAll(invoicesTask, productsTask);

            var invoices = await invoicesTask;
            allProducts = await productsTask;


            totalInvoices = invoices.Count();
            totalProducts = allProducts.Count();
            totalRevenue = invoices.Sum(inv => CalculateInvoiceTotal(inv));
            lowStockProducts = allProducts.Count(p => p.Quantity < 10); 
            recentInvoices = invoices.OrderByDescending(i => i.Date).Take(10);

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }

    private decimal CalculateInvoiceTotal(Invoice invoice)
    {
        
        decimal subtotal = 100; 
        decimal taxAmount = subtotal * invoice.Tax / 100;
        decimal discountAmount = subtotal * invoice.Discount / 100;
        return subtotal + taxAmount - discountAmount;
    }

    private string GetStatusClass(int status)
    {
        return status switch
        {
            1 => "status-paid",
            2 => "status-Sent",
            3 => "status-cancelled",
            _ => "status-pending"
        };
    }

    private string GetStatusText(int status)
    {
        return status switch
        {
            1 => "Paid",
            2 => "Sent",
            3 => "Cancelled",
            _ => "Pending"
        };
    }

    private async Task HandleLogout()
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Do you want to log out?"))
        {
            try
            {
                await localStorage.SetItemAsStringAsync("isLoggedIn", "false");
                Navigation.NavigateTo("/login");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Logout error: {ex.Message}");
            }
        }
    }

    private void NavigateToInvoices() => Navigation.NavigateTo("/invoices");
    private void NavigateToProducts() => Navigation.NavigateTo("/products");
    private void NavigateToCreateInvoice() => Navigation.NavigateTo("/createinvoice");
    private void NavigateToCreateProduct() => Navigation.NavigateTo("/createproduct");

    private void ViewInvoice(Guid invoiceId)
    {
        selectedInvoiceId = invoiceId;
        showViewModal = true;
    }

    private void OnViewModalClosed()
    {
        showViewModal = false;
        selectedInvoiceId = Guid.Empty;
    }
}

