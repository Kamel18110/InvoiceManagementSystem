@using BulidInvoiceApp.Services.Products
@inject IProductServices ProductService

@if (IsVisible)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="form-control" @onclick:stopPropagation="true">
            <div class="modal-header">
                <p class="title">Edit Product</p>
                <button class="close-button" @onclick="CloseModal">&times;</button>
            </div>

            <div class="modal-body">
                @if (currentProduct == null)
                {
                    <div class="loading-modal">Loading...</div>
                }
                else
                {
                    <EditForm Model="@currentProduct" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="input-field">
                            <input class="input" id="name" @bind="currentProduct.Name" required />
                            <label class="label">Product Name</label>
                            <ValidationMessage For="@(() => currentProduct.Name)" />
                        </div>

                        <div class="input-field">
                            <textarea class="input" id="description" @bind="currentProduct.Description" required></textarea>
                            <label class="label">Description</label>
                        </div>

                        <div class="input-field">
                            <input class="input" type="number" id="price" @bind="currentProduct.Price" required />
                            <label class="label">Price</label>
                            <ValidationMessage For="@(() => currentProduct.Price)" />
                        </div>

                        <div class="input-field">
                            <input class="input" type="number" id="quantity" @bind="currentProduct.Quantity" required />
                            <label class="label">Quantity</label>
                            <ValidationMessage For="@(() => currentProduct.Quantity)" />
                        </div>

                        <div class="input-field">
                            <label class="file-label">
                                <span>Product Image</span>
                                <InputFile id="image" OnChange="@HandleImageUpload" class="file-input" />
                            </label>
                            @if (!string.IsNullOrEmpty(imagePreview))
                            {
                                <img src="@imagePreview" class="image-preview" alt="Image Preview" />
                            }
                            else if (currentProduct.Image != null && currentProduct.Image.Length > 0)
                            {
                                <img src="@($"data:image/png;base64,{Convert.ToBase64String(currentProduct.Image)}")"
                                     class="image-preview" alt="Current image" />
                            }
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="submit-btn">Update Product</button>
                            <button type="button" class="cancel-btn" @onclick="CloseModal">Cancel</button>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public Guid ProductId { get; set; }
    [Parameter] public EventCallback OnProductUpdated { get; set; }
    [Parameter] public EventCallback OnModalClosed { get; set; }

    private Product? currentProduct;
    private string imagePreview = string.Empty;
    private byte[]? imageBytes;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && ProductId != Guid.Empty && currentProduct?.Id != ProductId)
        {
            await LoadProduct();
        }
        else if (!IsVisible)
        {
            ResetModal();
        }
    }

    private async Task LoadProduct()
    {
        try
        {
            currentProduct = await ProductService.GetById(ProductId);
            imagePreview = string.Empty;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading product: {ex.Message}");
        }
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        var file = e.File;
        var format = "image/jpg";
        var resizedImage = await file.RequestImageFileAsync(format, 300, 300);

        using var stream = resizedImage.OpenReadStream();
        using var memoryStream = new MemoryStream();
        await stream.CopyToAsync(memoryStream);

        imageBytes = memoryStream.ToArray();
        imagePreview = $"data:{format};base64,{Convert.ToBase64String(imageBytes)}";
        if (currentProduct != null)
        {
            currentProduct.Image = imageBytes;
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            if (currentProduct != null)
            {
                await ProductService.Update(currentProduct);

            
                await OnProductUpdated.InvokeAsync();
                await CloseModal();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating product: {ex.Message}");
        }
    }

    private async Task CloseModal()
    {
        IsVisible = false;
        await OnModalClosed.InvokeAsync();
    }

    private void ResetModal()
    {
        currentProduct = null;
        imagePreview = string.Empty;
        imageBytes = null;
    }
}

